<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="vertical"
    android:background="#000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"

            android:text="Enter Card Balance($)"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/etCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="20dp"
            android:padding="9dp"
            android:background="@drawable/border"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"

            android:text="Enter Yearly Interest Rate(%)"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/etRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="20dp"
            android:padding="9dp"
            android:background="@drawable/border"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"

            android:text="Enter Minimum Payment($)"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/etPay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="20dp"
            android:padding="9dp"
            android:background="@drawable/border"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"

            android:text="Final Card Balance($)"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:padding="5dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/etFbal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="20dp"
            android:padding="9dp"
            android:background="@drawable/border"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"

            android:text="Months Remaining"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/etMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="20dp"
            android:padding="9dp"
            android:background="@drawable/border"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"

            android:text="Interest Paid Will Be($)"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/etIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="20dp"
            android:padding="9dp"
            android:background="@drawable/border"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btcomp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:hint="COMPUTE"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    <Button
        android:id="@+id/btclear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:background="#FFFFFF"
    android:hint="CLEAR"
    android:textSize="15sp"
    android:gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"/>
</LinearLayout>
